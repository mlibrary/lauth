##
##  Makefile -- Build procedure for sample lauth Apache module
##  Autogenerated via ``apxs -n lauth -g''.
##

builddir=.
top_srcdir=/usr/local/apache2
top_builddir=/usr/local/apache2
include /usr/local/apache2/build/special.mk

#   the used tools
APACHECTL=apachectl

CXX=g++
CXXFLAGS=-std=c++20

#   additional defines, includes and libraries
#DEFS=-Dmy_define=my_value
INCLUDES=-Iclient/include -Iclient
LIBS=-lssl -lcrypto

#   the default target
all: local-shared-build

#   install the shared object file into Apache 
install: install-modules-yes install-client

liblauth-client.so:
	cd client && bazel build ...

install-client: liblauth-client.so
	install -v client/bazel-bin/lauth/liblauth-client.so /usr/lib/`gcc -dumpmachine`

#   cleanup
clean:
	-rm -f mod_lauth.o mod_lauth.lo mod_lauth.slo mod_lauth.la

#   simple test
test:
	cd client && bazel test ...

#   install and activate shared object by reloading Apache to
#   force a reload of the shared object file
reload: install restart

#   the general Apache start/restart/stop
#   procedures
start:
	$(APACHECTL) start
restart:
	$(APACHECTL) restart
stop:
	$(APACHECTL) stop

